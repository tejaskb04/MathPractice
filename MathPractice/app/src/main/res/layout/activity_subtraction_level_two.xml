<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mathpractice.SubtractionLevelTwoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time"
                android:typeface="sans"
                android:textSize="24sp"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/score"
                android:typeface="sans"
                android:textSize="24sp"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/problem"
                android:textSize="24sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/answer"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/enter"
                android:text="Enter"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/zero"
                android:text="0"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/one"
                android:text="1"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/two"
                android:text="2"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/three"
                android:text="3"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/four"
                android:text="4"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/five"
                android:text="5"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/six"
                android:text="6"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/seven"
                android:text="7"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/eight"
                android:text="8"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/nine"
                android:text="9"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/backspace"
                android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
